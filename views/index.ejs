<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cocktail advisor</title>
    <link rel="stylesheet" href="main.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&family=Tajawal:wght@200;300;400;500;700;800;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="center">
      <%# modal form %>

      <div class="pop-up">
        <%# sidebar list %> 
        <% if(locals.drink){ %>
        <div class="left-sidebar">
          <h1 class="mixtures-text dancing-script">Mixtures of <%=drink%></h1>
          <p class="dancing-script select">Select any mixture of your liking</p>
        </div>

        <div class="right-sidebar">
          <%# cocktail list %> 
          <% choices.forEach((choice) => { %>
          <div class="cocktails">
            <img src="<%=choice.strDrinkThumb%>" />
            <form action="/mixture" method="post" class="input-form">
              <input
                type="hidden"
                name="drink"
                value="<%=choice.strDrink %>"
                class="hidden-input"
              />
              
              <input
                type="submit"
                value="<%=choice.strDrink %>"
                class="btn dancing-script"
              />
            </form>
          </div>
          <% })} %>
        </div>
      </div>

      <div id="container" class="container">
        <%# sidebar list %>
        <div class="left-sidebar">
          <h1 class="welcome dancing-script">Welcome</h1>
          <p class="dancing-script select">
            Select any Cocktail of your liking
          </p>
        </div>
        <div class="right-sidebar">
          <%# cocktail list %>
          <div class="cocktails">
            <img
              src="https://www.thecocktaildb.com/images/media/drink/5noda61589575158.jpg"
            />
            <form action="/drink" method="post" class="input-form">
              <input
                type="hidden"
                name="drink"
                value="Margarita"
                class="hidden-input"
              />

              <button class="btn-submit dancing-script">Margarita</button>
              <input
                type="submit"
                value="Margarita"
                class="btn-submit dancing-script"
              />
            </form>
            <button class="btn-submit dancing-script" style="display: none;">Margarita</button>
          </div>
          <div class="cocktails"></div>
          <div class="cocktails"></div>
          <div class="cocktails"></div>
          <div class="cocktails"></div>
          <div class="cocktails"></div>
          <div class="cocktails"></div>
          <div class="cocktails"></div>
          <div class="cocktails"></div>
          <div class="cocktails"></div>
        </div>
      </div>
    </div>
    <script src="/main.js" charset="utf-8"></script>
  </body>
</html>
